<Window x:Class="BigramParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BigramParser" 
        xmlns:userControls="clr-namespace:BigramParser.UserControls"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        MinHeight="450"
        MinWidth="500">
   <StackPanel HorizontalAlignment="Center">
      <userControls:StringEditor/>
      <Button Style="{StaticResource BP_Button_Style}">Submit</Button>
    </StackPanel>
</Window>
